    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String jk = null, hobi,Olahraga, Memasak, Membaca;
        
        if(jRadioButton1.isSelected()) {
            jk = "Laki - Laki";
        }else if (jRadioButton2.isSelected()) {
            jk = "Perempuan";
        }
        if (jCheckBox1.isSelected()) {
            Olahraga = " Ya";
        }else{
            Olahraga = "Tidak";
        }if (jCheckBox2.isSelected()) {
            Memasak = " Ya";
        }else{
            Memasak = "Tidak";
        }if (jCheckBox3.isSelected()) {
            Membaca = " Ya";
        }else{
            Membaca = "Tidak";
        }
        jTextArea1.setText(
                "\n Nama \t = "+jTextField2.getText()+
                "\n Jenis Kelamin \t = "+jk+
                "\n Agama  \t = "+jComboBox1.getSelectedItem()+
                "\n Hobi : "+
                "\n Olahraga \t = " +Olahraga+
                "\n Memasak \t = " + Memasak+
                "\n Membaca \t =  " +Membaca);
    }                                        

